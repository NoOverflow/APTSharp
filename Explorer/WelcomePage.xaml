<Page x:Class="Explorer.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Explorer"
      mc:Ignorable="d" 
      Height="800" Width="1333" MinWidth="1300" 
      Title="WelcomePage">


    <Grid Background="#FF1D1D1D">
        <Menu Margin="0,0,0,770" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="170" Margin="343,258,0,0" VerticalAlignment="Top" Width="185" Source="/neptune-planet.png"/>
        <Label Content="Explorer" HorizontalAlignment="Left" Margin="360,428,0,0" VerticalAlignment="Top" Foreground="White" FontSize="35"/>
        <Button x:Name="LoadButton" Content="Load sound file ..." HorizontalAlignment="Left" Margin="745,345,0,0" VerticalAlignment="Top" Height="55" Width="290" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontSize="24" Click="LoadButton_Click"/>
        <Rectangle HorizontalAlignment="Center" Height="360" Margin="0,195,0,0" Stroke="#FF464343" VerticalAlignment="Top" Width="1" Fill="White"/>

    </Grid>
</Page>
